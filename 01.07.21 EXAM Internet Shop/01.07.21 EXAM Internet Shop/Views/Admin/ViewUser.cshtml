@model _01._07._21_EXAM_Internet_Shop.Models.User
@{
    ViewData["Title"] = "Viewing User";
    Layout = "_AdminLayout";
}

<form asp-action="EditUser" asp-controller="Admin" method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" class="form-control" readonly>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Firstname</label>
        <input asp-for="FirstName" class="form-control" readonly>
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Lastname</label>
        <input asp-for="LastName" class="form-control" readonly>
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email address</label>
        <input asp-for="Email" class="form-control" aria-describedby="emailHelp" readonly>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Country" class="form-label">Country</label>
        <input asp-for="Country" class="form-control" readonly>
        <span asp-validation-for="Country"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RoleId" class="form-label">Role Id</label>
        <input type="number" asp-for="RoleId" class="form-control" aria-describedby="emailHelp" readonly>
        <span asp-validation-for="RoleId"></span>
    </div>
    <a asp-area="" asp-controller="Admin" asp-action="GetUsers" class="btn btn-success">Back to all users</a>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

