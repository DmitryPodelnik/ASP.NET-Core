@using _01._07._21_EXAM_Internet_Shop.Models
@model List<Product>
@{
    ViewData["Title"] = "Cart";
}

<!-- Cart Modal -->
<div id="cartModal">
    <div>
        <div class="align-text-bottom">
            <div>
                @if (Model.Count == 0)
                {
                    <h5 class="text-center">Cart is empty</h5>
                    <br />
                    <h6 class="text-center">But it's never too late to fix it :)</h6>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="card" style="width: 18rem; border: 0.5px solid grey; border-radius: 0; justify-content: space-between;">
                            <img src=~/images/Products/@item.Image class="card-img-top" alt="image">
                            <div class="card-body">
                                <h6 class="card-title">@item.Name</h6>
                                <input type="submit" asp-controller="" asp-action="" class="btn btn-success" value="Price: $@item.Price" />
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="justify-content-between text-center">
                <a class="btn btn-outline-success" asp-area="" asp-controller="Products" asp-action="AllProducts">Continue shopping</a>
                <button type="button" class="btn btn-outline-dark">Empty cart</button>
                <a class="btn btn-success" asp-area="" asp-controller="Authorization" asp-action="RegisterUser">Checkout</a>
            </div>
        </div>
    </div>
</div>
<!-- Cart Modal -->
