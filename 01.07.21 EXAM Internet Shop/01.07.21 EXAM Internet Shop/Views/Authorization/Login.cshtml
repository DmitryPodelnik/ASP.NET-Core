@model _01._07._21_EXAM_Internet_Shop.Models.User
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Username" for="username" class="form-label">Username</label>
        <input asp-for="Username" type="text" class="form-control" id="username" name="username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" for="password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="password" name="password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Sign In</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}