@{
    ViewData["Title"] = "Calculator";
}

<div class="calculator">
    <form method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">First number</label>
            <input type="text" class="form-control" name="firstNumber">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Second number</label>
            <input type="text" class="form-control" name="secondNumber">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Result</label>
            <input type="text" class="form-control" name="result" value=@ViewData["Result"] readonly>
        </div>
        <button type="submit" name="calculate" class="btn btn-primary" value="+">+</button>
        <button type="submit" name="calculate" class="btn btn-primary" value="-">-</button>
        <button type="submit" name="calculate" class="btn btn-primary" value="*">*</button>
        <button type="submit" name="calculate" class="btn btn-primary" value="/">/</button>
    </form>
</div>
