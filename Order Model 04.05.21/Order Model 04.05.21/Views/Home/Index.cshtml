@using Order_Model_04._05._21.Models
@model OrdersRepository

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table>
        <tr><td>Name</td><td>Amount</td><td>Address</td><td>Note Content</td><td>Customer Name</td><td>Delivery Date</td></tr>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Amount</td>
                <td>@item.Address.ToString()</td>
                <td>@item.NoteContent</td>
                <td>@item.CustomerName</td>
                <td>@item.DeliveryDate</td>
            </tr>
        }
     </table>
</div>
