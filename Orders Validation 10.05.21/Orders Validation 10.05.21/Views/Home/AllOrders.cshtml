@model Orders_Validation_10._05._21.Models.OrdersRepository
@{
    ViewData["Title"] = "AllOrders";
}

<h1>All Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model.Orders)
        {
            <tr>
                <th scope="row">++i</th>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.Date</td>
            </tr>
        }
    </tbody>
</table>

